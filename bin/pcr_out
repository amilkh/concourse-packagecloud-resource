#!/usr/bin/env ruby

require 'json'
require 'packagecloud_resource'

begin
    if ARGV.length < 1
        raise "Too few arguments"
    end
    work_dir = ARGV[0]
    request = JSON.parse(STDIN.read)

    version = PackageCloudResource::Out.main(work_dir, request)
    STDOUT.puts JSON.generate(version)
    exit
rescue Exception => e
    STDERR.puts(e.message)
    exit 1
end
